{
  "name": "hyper",
  "license": "AGPL-3.0-only",
  "version": "beta-v0.0.1",
  "description": "Gas optimized automated market maker.",
  "files": [
    "contracts/**/*.sol"
  ],
  "scripts": {
    "build": "yarn build:forge",
    "build:crytic": "crytic-compile . --compile-force-framework foundry --compile-custom-build='yarn build:forge:crytic --extra-output abi --extra-output userdoc --extra-output devdoc --extra-output evm.methodIdentifiers --force'",
    "build:forge": "FOUNDRY_PROFILE=optimized forge build",
    "build:forge:crytic": "FOUNDRY_PROFILE=crytic forge build",
    "clean": "hardhat clean && forge clean && rm -f crytic-export/*",
    "coverage": "FOUNDRY_PROFILE=test forge coverage",
    "coverage:report": "FOUNDRY_PROFILE=test forge coverage --report lcov",
    "test": "FOUNDRY_PROFILE=test forge test -vvv",
    "test:echidna": "FOUNDRY_PROFILE=crytic echidna-test . --config test/crytic/config.yaml",
    "lint": "prettier --write **.sol && prettier --write **.ts",
    "prepare": "husky install",
    "prepare:echidna": "etheno --ganache --ganache-args='--miner.blockGasLimit 20000000' -x test/crytic/init.json",
    "prepare:echidna:corpus": "yarn test:hardhat --network ganache",
    "deploy": "forge script scripts/Deploy.s.sol:Deploy --rpc-url $PRIMITIVE_RPC --fork-url $FORK_URL --broadcast",
    "deploy:ganache": "forge script scripts/Deploy.s.sol:Deploy --fork-url http://localhost:8546 --broadcast",
    "print:storage": "forge inspect contracts/Hyper.sol:Hyper storage-layout"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/primitivefinance/hyper.git"
  },
  "keywords": [
    "forge",
    "solidity",
    "primitive"
  ],
  "author": "Primitiveâ„¢",
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.3",
    "@nomiclabs/hardhat-ethers": "^2.0.5",
    "@types/chai": "^4.3.1",
    "@types/mocha": "^9.1.1",
    "@types/node": "^17.0.24",
    "chai": "^4.3.6",
    "dotenv": "^16.0.0",
    "ethers": "5.6.1",
    "evm-bn": "^1.1.1",
    "hardhat": "^2.10.2",
    "hardhat-dependency-compiler": "^1.1.3",
    "hardhat-preprocessor": "^0.1.5",
    "hardhat-tracer": "^1.1.0-rc.5",
    "husky": ">=6",
    "lint-staged": ">=10",
    "prettier": "2.6.2",
    "prettier-plugin-solidity": "^1.0.0",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "lint-staged": {
    "*.js": "prettier --write",
    "*.ts": "prettier --write"
  },
  "dependencies": {
    "@primitivefi/rmm-core": "^1.0.0",
    "@rari-capital/solmate": "7.0.0-alpha.3",
    "@typechain/ethers-v5": "^10.0.0",
    "@typechain/hardhat": "^6.0.0",
    "typechain": "^8.0.0"
  },
  "resolutions": {
    "async": ">=2.6.4",
    "cross-fetch": ">=3.1.5",
    "lodash": ">=4.17.21",
    "node-fetch": ">=2.6.7",
    "underscore": ">=1.12.1",
    "yargs-parser": ">=5.0.1"
  }
}
